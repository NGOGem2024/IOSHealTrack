<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background">

    <ImageView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/spine_container"
        android:src="@drawable/arogya_text" />

    <LinearLayout
        android:id="@+id/spine_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <View
            android:id="@+id/dot1"
            style="@style/SpineDot"
            android:layout_marginBottom="4dp"/>

        <View
            android:id="@+id/dot2"
            style="@style/SpineDot"
            android:layout_marginBottom="4dp"/>

        <View
            android:id="@+id/dot3"
            style="@style/SpineDot"
            android:layout_marginBottom="4dp"/>

        <View
            android:id="@+id/dot4"
            style="@style/SpineDot"
            android:layout_marginBottom="4dp"/>

        <View
            android:id="@+id/dot5"
            style="@style/SpineDot"/>
    </LinearLayout>

    <TextView
        android:id="@+id/clinic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spine_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Physiotherapy Clinic"
        android:textColor="@color/text_primary"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/rehab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clinic_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="&amp; REHAB CENTRE"
        android:textColor="@color/accent_red"
        android:textStyle="bold"
        android:textSize="16sp"/>

</RelativeLayout>